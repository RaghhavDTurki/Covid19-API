{
    "name": "covid19-api",
    "version": "1.0.0",
    "description": "TypeGraphql Covid-19 API",
    "main": "index.ts",
    "author": "Raghhav D Turki",
    "private": false,
    "scripts": {
        "start": "node dist/index.js",
        "postinstall": "tsc --p tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
        "start:dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register src/index.ts",
        "eslint": "eslint . --ext ts,gql --ignore-path .eslintignore",
        "eslint:fix": "eslint --fix . --ext ts,gql --ignore-path .eslintignore",
        "prettier": "prettier \"./**/*.{ts,yml,yaml}\" -l --ignore-path .eslintignore",
        "prettier:fix": "prettier \"./**/*.{ts,yml,yaml}\" --write --ignore-path .eslintignore"
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 4,
        "singleQuote": true
    },
    "dependencies": {
        "apollo-datasource-rest": "^0.14.0",
        "apollo-server": "^2.25.1",
        "class-validator": "^0.13.1",
        "graphql": "^15.5.0",
        "graphql-middleware": "^6.1.3",
        "graphql-rate-limit": "^3.1.0",
        "reflect-metadata": "^0.1.13",
        "tsc": "^2.0.3",
        "type-graphql": "^1.1.1"
    },
    "devDependencies": {
        "@types/graphql": "^14.5.0",
        "@typescript-eslint/eslint-plugin": "^4.27.0",
        "@typescript-eslint/parser": "^4.27.0",
        "apollo-boost": "^0.4.9",
        "eslint": "^7.28.0",
        "eslint-plugin-graphql": "^4.0.0",
        "prettier": "^2.3.1",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.9.0",
        "tscpaths": "^0.0.9",
        "typescript": "^4.3.2"
    }
}
